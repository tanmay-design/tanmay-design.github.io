$(document).ready(function(){
  $(".menu").hide();
  $(".bar").click(function() {
    $(".header").fadeToggle("slow",
      function(){
        document.getElementById("topline").y1="13";
      },
      function(){
        $("#middleline").hide();
      },
      function(){
        document.getElementById("bottomline").y2="1";
      });

  });

  });


###Script js for svg burger menu

$(document).ready(function(){
  $(".menu").hide();
  $(".bar").click(function() {
    $(".menu").fadeIn("slow");
    $("#topline").attr("y2", "13  ");
    $("#bottomline").attr("y2", "1");
    $("#middleline").hide();
    $(this).addClass("cross").removeClass("bar");
  });

  $(".cross").click(function() {
    $(".menu").slideToggle("slow");
    $("#topline").attr("y2", "1 ");
    $("#bottomline").attr("y2", "13 ");
    $("#middleline").show();
    $(this).removeClass("cross").addClass("bar");
  });
});


<svg height="14" width="1vw">
  <line id="topline" x1="0" y1="1" x2="1vw" y2="1" />
  <line id="middleline" x1="0" y1="7" x2="1vw" y2="7" />
  <line id="bottomline" x1="0" y1="13" x2="1vw" y2="13" />
</svg>



